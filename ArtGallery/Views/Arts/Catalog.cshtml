@model IEnumerable<ArtGallery.Models.Structs.Dto.ArtDto>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="ru">
<head>
    <title>title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/element.css" asp-append-version="true"/>
    <script src="~/js/like-button.js"></script>
</head>
<body onload="like()">
<div class="element-container">
    <ul class="element-ul">
        @foreach (var art in Model)
        {
            <li class="horizontal-li">
                <div class="element-block">
                    <div class="element-block__image">
                        <a asp-controller="Arts" asp-action="Picture">
                            <img class="element-block__image" src="~/images/arts/9_val.jpg" alt="Картина"/>
                        </a>
                        <div class="element-block__like">
                            <button class="heart">
                                <div class="heart-flip"></div>
                            </button>
                        </div>
                    </div>
                    <div class="element-block__title">@art.Name</div>
                    <div class="element-block__param">
                        <div>
                            <div class="element-block__artist">Художник:
                                <a asp-controller="Arts" asp-action="Artist" asp-route-idArtist="@art.ArtistId">@art.Artist?.Name</a>
                            </div>
                        </div>
                        <div class="element-block__size">
                            Размер: @art.Size
                        </div>
                        <div>
                            <div class="element-block__price">Цена: @art.Price</div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
</body>
</html>
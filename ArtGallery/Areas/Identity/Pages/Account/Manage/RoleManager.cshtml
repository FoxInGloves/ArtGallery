@page
@model ArtGallery.Areas.Identity.Pages.Account.Manage.RoleManagerModel
@{
}

<h3>Role Manager</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form method="post">
    <div class="input-group">
        <input name="newRoleModel" class="form-control w-25" asp-for="Input.NewRole">
        <span class="input-group-btn">
            <button type="submit" class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Роль</th>
    </tr>
    </thead>
    <tbody>
    <form asp-page-handler="delete">
    @foreach (var role in Model.Roles)
    {

        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td><button name="roleId" value="@role.Id" class="btn btn-danger">Удалить</button></td>
        </tr>
        
    }
    </form>
    </tbody>
</table>
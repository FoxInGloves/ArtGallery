@page
@model ArtGallery.Areas.Identity.Pages.Account.Manage.UserRolesManagerModel
@{
    
}

<h3>User Roles</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserId</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <a class="btn btn-primary" asp-page="./ManageUserRoles" asp-route-userId="@user.UserId">Manage Roles</a>
            </td>
        </tr>
    }
    </tbody>
</table>